@model IEnumerable<User>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Surname)</th>
                <th>@Html.DisplayNameFor(m => m.Username)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>@Html.DisplayNameFor(m => m.IsActive)</th>
                <th>@Html.DisplayNameFor(m => m.IsAdmin)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (User user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>@user.Username</td>
                    <td><a href="mailto:@user.Email" target="_blank">@user.Email</a></td>
                    <td><i class="fas @(user.IsActive ? "fa-check text-success" : "fa-times text-danger")"></i></td>
                    <td><i class="fas @(user.IsAdmin ? "fa-check text-success" : "fa-times text-danger")"></i></td>
                    <td class="text-end" width="150">
                        <div class="btn-group btn-group-sm" role="group">
                            @*<a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@user.Id"><i class="fas fa-edit"></i></a>*@
                            <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@user.Id"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@user.Id"><i class="fas fa-search"></i></a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@user.Id"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>